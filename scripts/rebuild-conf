show_selection ()
{
    printf "    1)  toolchain-alt-bincompat-m68k\n"
    printf "    2)  alt-bincompat-amiga-m68k\n"
}

process_selection ()
{
    case $1 in
        1)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-bincompat-m68k
        BUILD_DIR=$(pwd)/toolchain-alt-bincompat-m68k-build
        TOOLCHAIN_BUILD=yes
        CONFIGURE_TARGET=amiga-m68k
        MAKE_TARGET="-s crosstools"
        ;;
        2)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-bincompat-m68k
        BUILD_DIR=$(pwd)/alt-bincompat-amiga-m68k
        CONFIGURE_TARGET=amiga-m68k
        CONFIGURE_OPTS="--with-aros-toolchain=yes"
        ;;
    esac
}

